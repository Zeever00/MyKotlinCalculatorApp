<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Result"
            android:layout_width="270dp"
            android:layout_height="58dp"
            android:id="@+id/resultView" android:textSize="25sp"
            android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.448"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="57dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/number1"
            android:hint="Number1"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/resultView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="54dp"
            android:ems="10"
            android:id="@+id/number2"
            android:hint="Number2"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/number1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:inputType="number"/>
    <Button
            android:text="+"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/sum" android:onClick="Sum"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" android:layout_marginEnd="298dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="-"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtract" android:onClick="Subtract"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="137dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" android:layout_marginEnd="201dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="*"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiply" android:onClick="Multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="231dp" android:layout_marginEnd="108dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="/"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/divide" android:onClick="Divide"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="322dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>